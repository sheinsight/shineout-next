{
  "compilerOptions": {
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "paths": {
      "chunk/*": ["./docs/chunk/*"],
      "shineout": ["packages/shineout/src/index.ts"],
      "base": ["packages/base/src/index.ts"],
    }
  },
  "includes": ["packages/**/*", "./docs/**/*"]
}
